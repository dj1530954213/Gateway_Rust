# Gateway Rust 环境变量配置模板
# 复制此文件为 .env.prod 或 .env.dev 并修改相应的值

# InfluxDB配置
INFLUXDB_ADMIN_PASSWORD=your_secure_influx_password

# Grafana配置  
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
GRAFANA_SECRET_KEY=your-super-secret-key-here

# EMQX配置
EMQX_ADMIN_PASSWORD=your_secure_emqx_password

# 网关配置
GATEWAY_SECRET_KEY=your-gateway-secret-key
GATEWAY_JWT_SECRET=your-jwt-secret-key

# 数据库配置
POSTGRES_PASSWORD=your_postgres_password
DATABASE_URL=postgres://postgres:your_postgres_password@localhost:5432/gateway_rust

# Redis配置（如果使用）
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://:your_redis_password@localhost:6379

# API配置
API_RATE_LIMIT=1000

# CORS安全配置 - 仅允许已知的前端域名
CORS_ALLOWED_ORIGINS=http://localhost:50020,https://yourdomain.com

# 日志级别
RUST_LOG=info
GATEWAY_LOG_LEVEL=info

# 安全配置
SESSION_SECRET=your-session-secret
ENCRYPTION_KEY=your_32_character_encryption_key