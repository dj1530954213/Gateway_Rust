# 开发环境配置
NODE_ENV=development

# 开发服务器配置
VITE_DEV_PORT=58020

# Gateway Rust API 配置 - 使用相对路径通过Vite代理
VITE_API_BASE_URL=
VITE_WS_BASE_URL=ws://localhost:8080

# 应用配置
VITE_APP_TITLE=Gateway Rust - IoT设备网关管理
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=IoT设备网关Web管理界面

# WebSocket配置
VITE_WS_HEARTBEAT_INTERVAL=30000
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# 调试配置
VITE_DEBUG=true
VITE_SHOW_CONSOLE_LOGS=true

# 测试模式配置 (临时绕过认证，仅用于开发测试)
VITE_TEST_MODE=true
VITE_BYPASS_AUTH=true
