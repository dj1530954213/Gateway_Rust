{
  "name": "gateway-rust-web-ui",
  "version": "1.0.0",
  "description": "Gateway Rust Web UI - IoT设备网关管理界面",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 50020",
    "dev:debug": "vite --mode development --host 0.0.0.0 --port 50020 --config vite.config.ts",
    "build": "vue-tsc --noEmit && vite build",
    "build:dev": "vue-tsc --noEmit && vite build --mode development",
    "build:prod": "vue-tsc --noEmit && vite build --mode production",
    "build:check": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test:unit": "vitest",
    "test:coverage": "vitest --coverage",
    "type-check": "vue-tsc --noEmit",
    "gen:api": "node scripts/generate-api.cjs",
    "gen:api:watch": "nodemon --watch http://localhost:8080/docs/openapi.json --exec \"npm run gen:api\"",
    "clean": "rm -rf dist node_modules/.vite"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.6.7",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.10",
    "echarts": "^5.4.3",
    "element-plus": "^2.5.6",
    "file-saver": "^2.0.5",
    "lodash-es": "^4.17.21",
    "mitt": "^3.0.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "uuid": "^9.0.1",
    "vee-validate": "^4.12.6",
    "vue": "^3.4.15",
    "vue-echarts": "^6.6.1",
    "vue-router": "^4.2.5",
    "xlsx": "^0.18.5",
    "yup": "^1.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.7.2",
    "@types/crypto-js": "^4.2.2",
    "@types/file-saver": "^2.0.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.16",
    "@types/nprogress": "^0.2.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.4",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vue": "^9.21.1",
    "jsdom": "^24.0.0",
    "openapi-typescript-codegen": "^0.25.0",
    "prettier": "^3.2.5",
    "sass": "^1.70.0",
    "terser": "^5.43.1",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.1.3",
    "vitest": "^1.2.2",
    "vue-tsc": "^1.8.27"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
