# å¥åº·æ£€æŸ¥
health:
	@echo "ğŸ¥ å¥åº·æ£€æŸ¥:"
	@echo "MQTT Broker:"
	@docker exec gateway-test-mqtt mosquitto_pub -h localhost -t test -m "test" >/dev/null 2>&1 && echo "  âœ… MQTT OK" || echo "  âŒ MQTT Failed"
	@echo "InfluxDB:"
